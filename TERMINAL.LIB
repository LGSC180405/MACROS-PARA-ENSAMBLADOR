;Libreria del terminal

SALIR MACRO
    MOV AH, 4Ch
    MOV AL, 0Ah
    INT 21h
ENDM

LEE_CARACTER MACRO caracter
    PUSH AX
    MOV AH, 01h
    INT 21h
    MOV caracter,AL
    POP AX
ENDM

ESCRIBE_CARACTER MACRO caracter
    PUSH AX
    PUSH DX
    MOV DL, caracter
    MOV AH, 02h
    INT 21h
    POP DX
    POP AX
ENDM

LEE_CARACTER_SIN_MOSTRAR MACRO caracter
    PUSH AX
    MOV AH, 08h
    INT 21h
    MOV caracter, AL
    POP AX
ENDM

ESCRIBE_CADENA MACRO cadena
    PUSH AX
    PUSH DX
    LEE DX, cadena
    MOV AH, 09h
    INT 21h
    POP DX
    POP AX
ENDM

LEER_BUFFER MACRO buffer
    PUSH AX
    PUSH DX
    MOV AH, 0Ah
    MOV DX, OFFSET buffer
    INT 21h
    POP DX
    POP AX
ENDM

ABRIR_ARCHIVO MACRO nombre, modo, id
    PUSH AX
    PUSH DX
    MOV AH, 3Dh
    MOV DX, OFFSET nombre
    ;(00h) Solo lectura, (01h) Solo escritura, (02h) Lectura y escritura
    MOV AL, modo  
    INT 21h
    MOV id, AX
    POP DX
    POP AX
ENDM

CERRAR_ARCHIVO MACRO id
    PUSH AX
    PUSH BX
    MOV AH, 3Eh
    MOV BX, id
    INT 21h
    POP BX
    POP AX
ENDM

LEER_ARCHIVO MACRO id, cantidad, buffer
    PUSH AX
    PUSH BX
    PUSH CX
    PUSH DX
    MOV AH, 3Fh
    MOV BX, id
    MOV CX, cantidad
    MOV DX, OFFSET buffer
    INT 21h
    PUSH DX
    PUSH CX
    PUSH BX
    PUSH AX
ENDM

ESCRIBIR_ARCHIVO MACRO id, cantidad, buffer
    PUSH AX
    PUSH BX
    PUSH CX
    PUSH DX
    MOV AH, 40h
    MOV BX, id
    MOV CX, cantidad
    MOV DX, OFFSET buffer
    INT 21h
    PUSH DX
    PUSH CX
    PUSH BX
    PUSH AX
ENDM

FECHA_SISTEMA MACRO anio, mes, dia
    PUSH AX
    PUSH CX
    PUSH DX
    MOV AH, 2Ah
    INT 21h
    MOV anio, CX
    MOV mes, DH
    MOV dia, DL
    PUSH DX
    PUSH CX
    PUSH AX
ENDM

HORA_SISTEMA MACRO hora, minuto, segundo
    PUSH AX
    PUSH CX
    PUSH DX
    MOV AH, 2Ch
    INT 21h
    MOV hora, CH
    MOV minuto, CL
    MOV segundo, DH
    PUSH DX
    PUSH CX
    PUSH AX
ENDM